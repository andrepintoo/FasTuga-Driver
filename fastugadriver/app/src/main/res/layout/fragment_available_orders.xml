<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/availableOrdersFragment"
    tools:context=".fragments.AvailableOrdersFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="40px"
        android:paddingTop="40px"
        android:paddingRight="40px">

        <TextView
            android:id="@+id/Welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome"
            android:textColor="#000000"
            android:textSize="34sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/textViewBalanceStatic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Balance: "
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewBalance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Balance"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" â‚¬" />
        </LinearLayout>

        <TextView
            android:id="@+id/AssignedOrders"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20px"
            android:paddingBottom="10px"
            android:text="Assigned Orders:"
            android:textColor="#000000"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="216dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonFilterFurthestAssigned"
                android:layout_width="220px"
                android:layout_height="100px"
                android:backgroundTint="#000000"
                android:text="Furthest"
                android:textAllCaps="false"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/buttonFilterClosestAssigned"
                android:layout_width="24dp"
                android:layout_height="100px"
                android:layout_weight="1"
                android:backgroundTint="#000000"
                android:text="Closest"
                android:textAllCaps="false"
                android:textColor="#FFFFFF" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>

        <ScrollView
            android:id="@+id/ScrollViewAssignedOrders"
            android:layout_width="match_parent"
            android:layout_height="620px"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/AvailableOrders"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30px"
            android:paddingBottom="10px"
            android:text="Available Orders:"
            android:textColor="#000000"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="191dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonFilterFurthestAvailable"
                android:layout_width="220px"
                android:layout_height="100px"
                android:backgroundTint="#000000"
                android:text="Furthest"
                android:textAllCaps="false"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/buttonFilterClosestAvailable"
                android:layout_width="54dp"
                android:layout_height="100px"
                android:layout_weight="1"
                android:backgroundTint="#000000"
                android:text="Closest"
                android:textAllCaps="false"
                android:textColor="#FFFFFF" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

        <ScrollView
            android:id="@+id/ScrollViewAvailableOrders"
            android:layout_width="match_parent"
            android:layout_height="620px"
            tools:ignore="SpeakableTextPresentCheck">

        </ScrollView>

    </LinearLayout>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>