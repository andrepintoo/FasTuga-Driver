<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ChangeMyPassword"
    tools:context=".fragments.ChangePassword">


    <TextView
        android:id="@+id/textMyProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Change My Password"
        android:textColor="#000000"
        android:textSize="31dp"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/textAtualPassword"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:textColor="#000000"
        android:text="Atual Password:"
        android:textSize="18dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="220dp"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="97dp"/>

    <EditText
        android:id="@+id/editTextAtualPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:layout_marginStart="170dp"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="97dp"/>

    <TextView
        android:id="@+id/textNewPassword"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:textColor="#000000"
        android:text="New Password:"
        android:textSize="18dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="250dp"
        android:layout_marginTop="130dp"
        android:layout_marginBottom="97dp"/>

    <EditText
        android:id="@+id/editTextNewPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:layout_marginStart="170dp"
        android:layout_marginTop="120dp"
        android:layout_marginBottom="97dp"/>

    <TextView
        android:id="@+id/textConfirmPassword"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:textColor="#000000"
        android:text="Confirm Password:"
        android:textSize="18dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="210dp"
        android:layout_marginTop="170dp"
        android:layout_marginBottom="97dp"/>

    <EditText
        android:id="@+id/editTextConfirmPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:layout_marginStart="170dp"
        android:layout_marginTop="160dp"
        android:layout_marginBottom="97dp"/>


    <Button
        android:id="@+id/buttonChangePasswordChange"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="130dp"
        android:layout_marginTop="300dp"
        android:layout_marginEnd="130dp"
        android:layout_marginBottom="370dp"
        android:backgroundTint="#000000"
        android:text="Change Password"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/buttonBackChangePassword"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="660dp"
        android:layout_marginEnd="320dp"
        android:layout_marginBottom="60dp"
        android:backgroundTint="#000000"
        android:text="Back"
        android:textColor="@color/white" />

</FrameLayout>