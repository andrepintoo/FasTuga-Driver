<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/OrderDetailsFragment"
    tools:context=".fragments.OrderDetailsFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/textOrderNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Order: "
        android:textColor="#000000"
        android:textSize="34dp"
        android:layout_marginStart="130dp"/>

    <TextView
        android:id="@+id/textOrderNumberInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="34dp"
        android:layout_marginStart="225dp"/>

    <TextView
        android:id="@+id/textClient"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:textColor="#000000"
        android:text="Client:"
        android:textSize="20dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="320dp"
        android:layout_marginTop="55dp"
        android:layout_marginBottom="97dp"/>

    <TextView
        android:id="@+id/textClientInput"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:textColor="#000000"
        android:textSize="18dp"
        android:layout_marginStart="75dp"
        android:layout_marginTop="57dp"
        android:layout_marginBottom="97dp"/>
    <TextView
        android:id="@+id/textClientPhone"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:textColor="#000000"
        android:text="Client Phone:"
        android:textSize="20dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="250dp"
        android:layout_marginTop="82dp"
        android:layout_marginBottom="97dp"/>

    <TextView
        android:id="@+id/textClientPhoneInput"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:textColor="#000000"
        android:textSize="18dp"
        android:layout_marginStart="140dp"
        android:layout_marginTop="84dp"
        android:layout_marginBottom="97dp"/>

    <TextView
    android:id="@+id/textLocation"
    android:layout_width="match_parent"
    android:layout_height="39dp"
    android:textColor="#000000"
    android:text="Location:"
    android:textSize="20dp"
    android:layout_marginStart="15dp"
        android:layout_marginEnd="290dp"
    android:layout_marginTop="107dp"
    android:layout_marginBottom="97dp"/>

    <TextView
        android:id="@+id/textLocationInput"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:textColor="#000000"
        android:textSize="18dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="109dp"
        android:layout_marginBottom="97dp"/>

    <TextView
        android:id="@+id/textDistance"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:textColor="#000000"
        android:text="Distance:"
        android:textSize="20dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="290dp"
        android:layout_marginTop="132dp"
        android:layout_marginBottom="97dp"/>

    <TextView
        android:id="@+id/textDistanceInput"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:textColor="#000000"
        android:textSize="18dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="134dp"
        android:layout_marginBottom="97dp"/>

    <TextView
        android:id="@+id/textEarning"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:textColor="#000000"
        android:text="Earning:"
        android:textSize="20dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="300dp"
        android:layout_marginTop="157dp"
        android:layout_marginBottom="97dp"/>

    <TextView
        android:id="@+id/textEarningInput"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:textColor="#000000"
        android:textSize="18dp"
        android:layout_marginStart="95dp"
        android:layout_marginTop="159dp"
        android:layout_marginBottom="97dp"/>

    <FrameLayout
        android:id="@+id/frame_layout"
        android:layout_width="match_parent"
        android:layout_height="470dp"
        android:layout_marginTop="190dp"
        android:layout_marginBottom="500dp" />

    <Button
        android:id="@+id/buttonBack"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="660dp"
        android:layout_marginEnd="320dp"
        android:layout_marginBottom="60dp"
        android:backgroundTint="#000000"
        android:text="Back"
        android:textColor="@color/white"
        android:visibility="invisible" />

    <Button
        android:id="@+id/buttonAssign"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="290dp"
        android:layout_marginTop="660dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="60dp"
        android:backgroundTint="#000000"
        android:text="Assign"
        android:textColor="@color/white"
        android:visibility="invisible" />

    <Button
        android:id="@+id/buttonClaim"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="290dp"
        android:layout_marginTop="660dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="60dp"
        android:backgroundTint="#000000"
        android:text="Claim"
        android:textColor="@color/white"
        android:visibility="invisible" />

    <Button
        android:id="@+id/buttonDelivered"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="290dp"
        android:layout_marginTop="660dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="60dp"
        android:backgroundTint="#000000"
        android:text="Delivered"
        android:textColor="@color/white"
        android:visibility="invisible" />

    <Button
        android:id="@+id/buttonCancelOrder"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="190dp"
        android:layout_marginTop="660dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="60dp"
        android:backgroundTint="#000000"
        android:text="Cancel"
        android:textColor="@color/white"
        android:visibility="invisible" />


</FrameLayout>